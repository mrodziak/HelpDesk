@model IEnumerable<HelpDesk.Models.Notification>
@{
    ViewData["Title"] = "Powiadomienia";
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h1 class="page-title mb-1">Powiadomienia</h1>
        <div class="page-lead">Lista informacji o zmianach w Twoich zgłoszeniach.</div>
    </div>

    <form asp-action="MarkAllRead" method="post">
        <button class="btn btn-outline-primary">Oznacz wszystkie jako przeczytane</button>
    </form>
</div>

<div class="card">
    <div class="card-body p-4">
        @if (!Model.Any())
        {
            <p class="text-muted mb-0">Brak powiadomień.</p>
        }
        else
        {
            foreach (var n in Model.OrderByDescending(x => x.CreatedAt))
            {
                <div class="comment">
                    <div class="d-flex justify-content-between align-items-start gap-3">
                        <div>
                            <div class="d-flex align-items-center gap-2">
                                <div class="fw-bold">@n.Title</div>
                                @if (!n.IsRead)
                                {
                                    <span class="badge-new">NOWE</span>
                                }
                            </div>
                            <div class="text-muted small">@n.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</div>
                        </div>

                        <form asp-action="MarkRead" method="post">
                            <input type="hidden" name="id" value="@n.Id" />
                            <button class="btn btn-outline-primary btn-sm">Przeczytane</button>
                        </form>
                    </div>

                    <div class="mt-2">@n.Message</div>

                    @if (!string.IsNullOrWhiteSpace(n.Url))
                    {
                        <div class="mt-2">
                            <a href="@n.Url">Otwórz</a>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>
