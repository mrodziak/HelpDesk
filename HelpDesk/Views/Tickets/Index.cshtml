@model IEnumerable<HelpDesk.Models.Ticket>

@{
    ViewData["Title"] = "Zgłoszenia";
}

<h1>Zgłoszenia</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Utwórz nowe</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Utworzono</th>
            <th>Kategoria</th>
            <th>Priorytet</th>
            <th>Status</th>
            <th>Użytkownik</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt</td>
                <td>@item.Category?.Name</td>

                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Support"))
                    {
                        <form asp-action="ChangePriority" method="post">
                            <input type="hidden" name="id" value="@item.Id" />

                            <select name="priorityId" onchange="this.form.submit()" class="form-select">
                                @foreach (var p in (IEnumerable<HelpDesk.Models.Priority>)ViewBag.Priorities)
                                {
                                    <option value="@p.Id" selected="@(item.PriorityId == p.Id)">@p.Name</option>
                                }
                            </select>
                        </form>
                    }
                    else
                    {
                        @item.Priority?.Name
                    }
                </td>

                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Support"))
                    {
                        <form asp-action="ChangeStatus" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <select name="status" onchange="this.form.submit()" class="form-select">
                                <option value="Nowe" selected="@(item.Status == "Nowe")">Nowe</option>
                                <option value="W toku" selected="@(item.Status == "W toku")">W toku</option>
                                <option value="Zamknięte" selected="@(item.Status == "Zamknięte")">Zamknięte</option>
                            </select>
                        </form>
                    }
                    else
                    {
                        @item.Status
                    }
                </td>

                <td>
                    @{
                        var email = item.User?.Email;
                        var login = email?.Split('@')[0];
                    }
                    @(login ?? email ?? "-")
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>